{% extends '@MauticCore/Default/content.html.twig' %}

{% set isNew = entity.id is null %}

{% block headerTitle %}
    {% if isNew %}
        {{ 'mautic.supressionlist.new'|trans }}
    {% else %}
        {{ 'mautic.supressionlist.edit'|trans({'%name%': entity.name}) }}
    {% endif %}
{% endblock %}

{% block content %}
<div class="panel panel-default">
    <div class="panel-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.name) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ form.emails.vars.label|trans }}</h3>
                    </div>
                    <div class="panel-body" style="max-height: 400px; overflow-y: auto;">
                        {{ form_widget(form.emails, {'attr': {'class': 'email-checkboxes'}}) }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ form.campaigns.vars.label|trans }}</h3>
                    </div>
                    <div class="panel-body" style="max-height: 400px; overflow-y: auto;">
                        {{ form_widget(form.campaigns, {'attr': {'class': 'campaign-checkboxes'}}) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_widget(form.buttons) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
